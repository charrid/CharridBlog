#header
    background: color-header-background
    padding-bottom: nav-height
    position: relative

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative

#header-logo
    clearfix()
    text-align: center
    .logo-wrap, .subtitle-wrap
        float: left
    .subtitle-wrap
        padding: 0px 0px 0px
        margin-left: 20px
    .subtitle
        font-size: 16px
        font-style: normal
        line-height: logo-height + 10
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)

#header-title
    clearfix()
    text-align: left
    margin-left: 20px
    margin-top: 30px
    .logo-wrap
        float: left
    .subtitle-wrap
        margin-left: 200px
        margin-top: 30px
        padding: 2px 2px 2px
    .subtitle
        font-size: 16px
        font-style: normal
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)
